# EnergyForms .htaccess - Apache 2.4+ compatible
RewriteEngine On

# MIME typy
AddType application/javascript .js
AddType text/css .css

# CORS headers
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "POST, GET, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type"
</IfModule>

# Handle OPTIONS preflight
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Serve existing files directly (PHP, CSS, JS, images)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route root-level PHP requests to public/ folder if file exists there
# This allows /admin-dashboard.php to serve public/admin-dashboard.php
RewriteCond %{DOCUMENT_ROOT}/public/%{REQUEST_URI} -f
RewriteRule ^(.+\.php)$ public/$1 [L]

# SPA routing - all other requests to index.html
RewriteRule ^ index.html [L]

# Protect sensitive files
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

<Files ".env">
    Require all denied
</Files>